<div class="showpage">
    <%=render 'sidebar' , user: @user%>

    <center><h1><%=@user.username%></h1></center>

    <h2>Posts</h2>
    <% if (current_user == @user)%>
        <%= link_to "New Post", '#', class: 'btn btn-success'%>
    <%end%>
    <% @posts.each do |post|%>
        <div class="postbox">
            <%= distance_of_time_in_words(post.created_at,Time.now)%> ago:
            <div class="content">
                <%= post.content%>
            </div>
        </div>
    <%end%>
</div>
