<div class="postsform">
    <% if (current_user == @user)%>
        <%=form_for @post,url: '#' do |f|%>
            <div class="form-group">
                <%=f.label :content%>
                <%=f.text_area :content ,class: 'form-control'%>
            </div>

            <%=f.submit 'Post', class: 'btn btn-primary'%>
        <%end%>
    <%end%>
</div>
