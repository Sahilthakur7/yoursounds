
<div id="cover-caption">
    <div class="container">
        <div class="col-sm-10 col-sm-offset-1"></div>
        <h1 class="display-2">You + SoundCloud = YourSounds</h1>
        <p>Listen to music from soundcloud, create your favorite playlists, share music with your friends and much more!</p>

        <% unless user_signed_in?%>
            <%= form_for(resource,as: resource_name, url: session_path(resource_name), :html => { class:"form-inline" }) do |f|%>
                <div class="form-group">
                    <label class="sr-only">Name</label>
                    &emsp;&emsp;&emsp;
                    &emsp;&emsp;&emsp;
                    &emsp;&emsp;&emsp;
                    <%= f.email_field :email , class:"form-control form-control-lg", placeholder:"abc@example.com"%>
                </div>
                <div class="form-group">
                    <label class="sr-only">Password</label>

                    <%= f.password_field :password , class:"form-control form-control-lg", placeholder:"Password"%>
                </div>
                <%= f.submit "Sign In!", class:"btn btn-success btn-lg"%>
                </form>
            <%end%>
            </br>
            </br>
            <%= button_to "Sign Up", new_user_registration_path , method: "get", class:"btn btn-success btn-lg"%>
            <br>
            <a href="#page-main" class="btn btn-secondary-outline btn-sm" role="button">&darr;</a>
        <%else%>
            <%= link_to "Sign Out", destroy_user_session_path, class: "btn btn-danger btn-lg", method: :delete%>
        <%end%>



    </div>
</div>
